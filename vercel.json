{
  "version": 2,
  "builds": [
    {
      "src": "thinkaloudLM/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "thinkaloudLM/backend/app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "thinkaloudLM/backend/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "thinkaloudLM/frontend/build/$1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key"
  },
  "installCommand": "cd thinkaloudLM/frontend && npm install",
  "buildCommand": "cd thinkaloudLM/frontend && npm run build"
} 